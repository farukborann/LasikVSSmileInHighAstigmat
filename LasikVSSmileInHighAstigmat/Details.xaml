<Controls:MetroWindow  xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" 
        x:Class="LasikVSSmileInHighAstigmat.Details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LasikVSSmileInHighAstigmat"
        xmlns:local1="clr-namespace:LasikVSSmileInHighAstigmat.ViewModels"
        mc:Ignorable="d"
        Title="Details" Height="720" Width="1280">

    <Controls:MetroWindow.DataContext>
        <local1:DetailsViewModel/>
    </Controls:MetroWindow.DataContext>

    <Grid>
        <DataGrid x:Name="props" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ItemsSource="{Binding dataGroup.Patients}" AutoGenerateColumns="True"  AutoGeneratingColumn="props_AutoGeneratingColumn" />
    </Grid>
</Controls:MetroWindow>
